<p style="color: green"><%= notice %></p>

<div id= "heading" class="text-center my-5">
  <h1 class="md:text-4xl text-2xl font-bold text-gray-900  ">Users list</h1>
</div>

<div id="users" class="md:grid grid-cols-3 md:mx-0 mx-4">
  <% @users.each do |user| %>
  <div class="col-start-2 col-span-1 my-6 text-gray-700 bg-white shadow-md bg-clip-border rounded-xl text-pretty break-words ">
    <div class="p-6">
      <h5 class="block mb-2 md:text-2xl text-lg font-semibold leading-snug tracking-normal text-blue-gray-900 ">
        <%= user.name %>
      </h5>
      <p class="block font-light  leading-relaxed text-inherit max-w-full">
        Number of todos: <%= user.todos.count %>
      </p>
    </div>
    <div class="p-6 pt-0">
      <%= link_to "Edit user", edit_user_path(user), class:"align-middle font-bold text-center uppercase text-sm py-3 my-3 px-6 rounded-lg bg-teal-700 text-white" %>
      <%= button_to "Delete user", archive_user_path(user), method: :patch,data: { confirm: "Are you sure you want to delete this user?" }, class:"align-middle font-bold text-center uppercase text-sm py-3 my-3 px-6 rounded-lg bg-teal-700 text-white" %>
    </div>
  </div>
  <% end %>
</div>