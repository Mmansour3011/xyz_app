<p style="color: green"><%= notice %></p>

<div id= "heading" class="text-center my-5">
  <h1 class="page-title">Users list</h1>
</div>

<div id="users" class="md:grid grid-cols-3 md:mx-0 mx-4">
  <% @users.each do |user| %>
  <div class="todo-container ">
    <div class="p-6">
      <h5 class="todo-title">
        <%= user.name %>
      </h5>
      <p class="todo-content">
        Number of todos: <%= user.todos.count %>
      </p>
    </div>
    <div class="p-6 pt-0">
      <%= link_to "Edit user", edit_user_path(user), class:"form-submit  text-sm bg-teal-700 px-9" %>
      <%= button_to "Delete user", archive_user_path(user), method: :patch,data: { confirm: "Are you sure you want to delete this user?" }, class:"form-submit text-sm py-3 my-3 px-6 bg-teal-700 w-36 mt-5" %>
    </div>
  </div>
  <% end %>
</div>