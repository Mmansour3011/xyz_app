<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="max-w-4xl mx-auto mt-3">
    <div class="mb-5">
      <%= form.label :title, style: "display: block",class: " form-label text-gray-900 " %>
      <%= form.text_field :title, class: "form-text text-gray-900" %>
    </div>
    
    <div class="my-10">
      <%= form.label :content, style: "display: block" ,class: "form-label text-gray-900" %>
      <%= form.text_area :content, class: "form-text text-gray-900 h-36" %>
    </div>
    <div class="my-10">
      <%= form.label :attachment %>
      <%= form.file_field :attachment %>
    </div>
    
    <div class="flex justify-center">
      <%= form.submit class: "bg-teal-700 form-submit"%>
    </div>
  </div>
<% end %>
